<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/relativeLayout_map"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <Button
            android:id="@+id/button_map_sharetrip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/fbshare" />

        <TextView
            android:id="@+id/debug"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/button_map_sharetrip"
            android:textAppearance="?android:attr/textAppearanceLarge" 
            />

   

    </RelativeLayout>

    <yoga1290.bey2ollak.TrafficLight
        android:id="@+id/trafficLight1"
        android:layout_width="match_parent"
        android:layout_height="34dp" />

    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.MapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>